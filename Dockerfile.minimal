# Minimal Dockerfile for Barbearia SaaS API - NO HEALTH CHECK
FROM node:22-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install pnpm and dependencies
RUN npm install -g pnpm && \
    pnpm install --frozen-lockfile

# Copy source code
COPY . .

# Build the server
RUN pnpm run build:server

# Expose port
EXPOSE 80

# NO HEALTH CHECK - Start the server directly
CMD ["node", "dist/server/production.mjs"]
