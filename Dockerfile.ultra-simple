# Dockerfile ULTRA SIMPLES - Zero complexidade
FROM node:22-alpine

WORKDIR /app

# Instalar dependências
COPY package.json ./
RUN npm install --production=false

# Copiar código
COPY . .

# Build
RUN npm run build:client
RUN npm run build:server

# Porta
EXPOSE 80

# Start
CMD ["node", "dist/server/production.mjs"]
